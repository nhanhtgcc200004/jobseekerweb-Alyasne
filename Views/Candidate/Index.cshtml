@model IEnumerable<finalyearproject.Models.Appliedjob>
@{
    Layout = "RecruiterLayout";
}
<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Candidate</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Email</th>
                            <th>Post Id</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach( var jobs in Model){
                        <tr>
                            <th>@jobs.appliedjob_id</th>
                            <th>@jobs.user.Email</th>
                            <th>@jobs.post.post_id</th>
                            <th>@jobs.status</th>
                            <th>
                                <div class="btn-group-vertical">
                                        <a id="appliedbutton" data-applied-id="@jobs.appliedjob_id" href="#" class="btn btn-success btn-icon-split" style="justify-content: normal">
                                        <span class="icon text-white" style="background: none">
                                            <i class="fas fa-check"></i>
                                        </span>
                                        <span class="text">Accecpt</span>
                                    </a>
                                        <a id="refusebutton" data-toggle="modal" data-applied-id="@jobs.appliedjob_id" data-target="#confirm_delete" class="btn btn-danger btn-icon-split">
                                        <span class="icon text-white" style="background: none">
                                            <i class="fas fa-trash"></i>
                                        </span>
                                        <span class="text">Refuse</span>
                                    </a>
                                </div>
                            </th>
                        </tr>
                        }
   

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    @Html.Partial("~/Views/Candidate/Components/DeleteModal.cshtml")
</div>
<!-- /.container-fluid -->
