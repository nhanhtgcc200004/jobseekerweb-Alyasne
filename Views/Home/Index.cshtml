@model IEnumerable<finalyearproject.Models.Post>
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Topbar Search -->
    <div class="card shadow mb-3" style="    position: sticky;
    text-align: end;
    z-index: 8;
    top: 4.4rem;">
        <div class="card-body d-flex align-items-end flex-end justify-content-end flex-wrap gap-4">
            <div style="margin-right: 1rem">
                <select class="form-control" id="exampleFormControlSelect1" style="min-width: 10rem">
                    <option>Criteria 1</option>
                    <option>Criteria 2</option>
                    <option>Criteria 3</option>
                </select>
            </div>
            <form class="navbar-search">
                <div class="input-group">
                    <input type="text" class="form-control bg-light border-0 small" placeholder="Search for..."
                           aria-label="Search" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="button">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- DataTales Example -->
    @foreach (var item in Model)
    {
        @Html.Partial("~/Views/Post/Components/ItemPost.cshtml",item)
    }

</div>
<!-- /.container-fluid -->
