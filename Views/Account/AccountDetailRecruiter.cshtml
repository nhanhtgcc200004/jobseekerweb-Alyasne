@model finalyearproject.Models.User
@{
    Layout = TempData["Layout"]?.ToString();
}
<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Profile</h6>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-center  flex-md-wrap flex-sm-wrap gap-5">
                <div class="d-flex flex-column flex-grow-1">
                    <div class="text-center">
                        <img src="~/img/Avatar/@Model.avatar" id="avatar_img" alt="" style="width: 10rem;height: 10rem">
                    </div>
                </div>
                <div class="flex-grow-1">
                    <form id="profile-form" method="post" asp-controller="Profile" asp-action="UpdateRecruiterProfile">
                        <div class="d-flex">
                            <div class="input-block" style="padding-right: 5%;">
                                <label>Full name</label>
                                <input type="text" value="@Model.Name" name="Full_Name" readonly />
                            </div>
                            <div class="input-block ms-3">
                                <label>Conpany Name</label>
                                <input type="text" value="@Model.company.company_name" name="Company_Name" readonly />
                            </div>
                        </div>
                        <div class="input-block">
                            <label>Email</label>
                            <input type="text" value="@Model.company.Email_conpany" name="Email" readonly />
                        </div>

                        <div class="input-block">
                            <label>Phone number</label>
                            <input type="text" value="@Model.Phone" name="Phone" readonly />
                        </div>
                        <div class="input-block">
                            <label>Address</label>
                            <input type="text" value="@Model.company.Address" name="Address" readonly />
                        </div>
                        <div class="d-flex gap-2">
                            <label style="font-size: 14px;color: #a1b4b4;">Gender</label>
                            <div class="ms-2">
                                <label for="Male">Male</label>
                                <input id="Male" type="radio" name="gender" value="Male" checked='@(Model.Gender == "Male" ? "checked" : null)' required readonly>
                            </div>

                            <div class="ms-3">
                                <label for="Female">Female</label>
                                <input id="Female" type="radio" value="Female" name="gender" checked='@(Model.Gender == "Female" ? "checked" : null)' required readonly>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
