@{
    Layout = null;
}

<div class="container-fluid">
    <!-- Content Row -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total post
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">99+</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-file-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Add similar columns for Total candidate, Total recruiter, and Total report -->
    </div>
    <!-- Content Row -->
    <!-- Chart Row -->
    <div class="row">
        <div class="col-xl-6 col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Top 10 company</h6>
                </div>
                <div class="card-body">
                    <canvas id="chart_1" class="chartjs-render-monitor"></canvas>
                </div>
            </div>
        </div>
        <div class="col-xl-6 col-lg-6">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Top 3 company</h6>
                </div>
                <div class="card-body">
                    <canvas id="chart_2" class="chartjs-render-monitor"></canvas>
                </div>
            </div>
        </div>
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Top 3 company</h6>
                </div>
                <div class="card-body">
                    <canvas id="chart_3" class="chartjs-render-monitor"></canvas>
                </div>
            </div>
        </div>
    </div>
    <!-- Chart Row -->
</div>

@section Scripts {
    <script src="~/public/vendor/chart.js/Chart.js"></script>
    <script src="~/public/js/dashboard/chart1.js"></script>
    <script src="~/public/js/dashboard/chart2.js"></script>
    <script src="~/public/js/dashboard/chart3.js"></script>
}
