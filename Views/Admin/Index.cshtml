@model IEnumerable<finalyearproject.Models.Post>
@{
    Layout = "AdminLayout";
}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Topbar Search -->
    <div class="card shadow mb-3" style="position: sticky;
    text-align: end;
    z-index: 8;
    top: 4.4rem;">
        <div class="card-body d-flex align-items-end flex-end justify-content-end flex-wrap gap-4">
            <form class="navbar-search" id="search_post" asp-controller="Search" asp-action="Search">
            <div style="margin-right: 1rem">
                <select class="form-control" id="exampleFormControlSelect1" name="seclect" style="min-width: 10rem">
                    <option value="Address">Address</option>
                    <option value="Position">Position</option>
                    <option value="Company Name">Company Name</option>
                </select>
            </div>
            
                <div class="input-group">
                    <input type="text" class="form-control bg-light border-0 small" placeholder="Search for..."
                           aria-label="Search" name="search_value" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- DataTales Example -->
    @foreach (var item in Model)
    {
        @Html.Partial("~/Views/Post/Components/PostHome.cshtml",item)
    }

</div>
<!-- /.container-fluid -->
